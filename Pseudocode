my $reference =<STDIN> ;
print "Enter the Bisulfite Sequence: \n";
my $BiSulSeq = <STDIN>;


open (REFERENCE,$reference) || die "The refernece  file cannot be opened";
my $seqA = <REFERENCE>;
close (REFERENCE);

open (BISUL,$BiSulSeq) || die "This Bisulfite file cannot be opened";
my $seqB = <BISUL>;
